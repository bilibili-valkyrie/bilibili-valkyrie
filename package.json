{
  "name": "bilibili-valkyrie",
  "version": "1.0.0",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "start": "cross-env NODE_ENV=production node build/index.js",
    "prestart": "tsc",
    "dev": "cross-env NODE_ENV=development ts-node-dev index.ts",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand --detectOpenHandles",
    "test:sim": "cross-env NODE_ENV=test jest --verbose --runInBand --detectOpenHandles tests/simulate_test.test.ts",
    "tsc": "tsc",
    "rmDB:test": "cross-env NODE_ENV=test ts-node utils/rmDB.ts",
    "rmDB:dev": "cross-env NODE_ENV=development ts-node utils/rmDB.ts",
    "rmDB:production": "cross-env NODE_ENV=production ts-node utils/rmDB.ts",
    "lint": "eslint ."
  },
  "license": "GPL-3.0",
  "private": false,
  "dependencies": {
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "config": "^3.3.6",
    "cors": "^2.8.5",
    "date-fns": "^2.22.1",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-jwt": "^6.0.0",
    "js-base64": "^3.6.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^5.12.13",
    "mongoose-unique-validator": "^2.0.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "^0.0.38",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.2",
    "@types/lodash": "^4.14.170",
    "@types/mongoose-unique-validator": "^1.0.5",
    "@types/node": "^15.12.4",
    "@types/supertest": "^2.0.11",
    "cross-env": "^7.0.3",
    "eslint": "^7.29.0",
    "eslint-config-airbnb-typescript-prettier": "^4.2.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.1",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/*.+(ts)"
    ]
  }
}
