{
  "name": "bilibili-valkyrie",
  "version": "1.0.0",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "start": "cross-env NODE_ENV=production node build/index.js",
    "prestart": "tsc",
    "dev": "cross-env NODE_ENV=development ts-node-dev src/index.ts",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand --detectOpenHandles",
    "test:sim": "cross-env NODE_ENV=test jest --verbose --runInBand --detectOpenHandles src/tests/simulate_test.test.ts",
    "tsc": "tsc",
    "rmDB:test": "cross-env NODE_ENV=test ts-node src/utils/rmDB.ts",
    "rmDB:dev": "cross-env NODE_ENV=development ts-node src/utils/rmDB.ts",
    "rmDB:production": "cross-env NODE_ENV=production ts-node src/utils/rmDB.ts",
    "lint": "eslint ."
  },
  "license": "GPL-3.0",
  "private": false,
  "dependencies": {
    "@thream/socketio-jwt": "^3.0.1",
    "axios": "^1.2.0",
    "bcryptjs": "^2.4.3",
    "bufferutil": "^4.0.7",
    "config": "^3.3.8",
    "cors": "^2.8.5",
    "date-fns": "^2.29.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-jwt": "^7.7.7",
    "js-base64": "^3.7.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.7.5",
    "morgan": "^1.10.0",
    "socket.io": "^4.5.4",
    "utf-8-validate": "^5.0.10"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "^3.3.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "@types/jest": "^27.5.0",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/lodash": "^4.14.191",
    "@types/mongoose-unique-validator": "^1.0.6",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.10",
    "@types/supertest": "^2.0.12",
    "cross-env": "^7.0.3",
    "eslint": "^8.29.0",
    "eslint-config-airbnb-typescript-prettier": "^5.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.8.0",
    "supertest": "^6.3.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.3"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/*.+(ts)"
    ]
  }
}
